<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Neighborhood #<%= @neighborhood.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @neighborhood.name %></dd>

              <dt>City</dt>
              <dd><%= @neighborhood.city %></dd>

              <!-- My code for user story "I want to see a list of venues in the neighborhood (Part 5)" -->
              <dt>Venues</dt>
              <% @neighborhood.venues.each do |venue| %>
                <dd><%= venue.name %></dd>
              <% end %>

              <!-- My code for user story "I want to see a list of favorites in the neighborhood (Part 6)" -->
              <dt>Favorites</dt>
              <% @neighborhood.favorites.each do |favorite| %>
                <dd><%= favorite.user.username %> - <%= favorite.dish.name %> - <%= favorite.venue.name %></dd>
              <% end %>
            </dl>

            <div class="btn-group btn-group-justified">
              <a href="/neighborhoods" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/neighborhoods/<%= @neighborhood.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_neighborhood/<%= @neighborhood.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
