<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @dish.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @dish.name %></dd>

              <dt>Cuisine</dt>
              <dd><%= @dish.cuisine.name %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/dishes" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/dishes/<%= @dish.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_dish/<%= @dish.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

<!-- Start Addition of Panel -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Favorites for <%= @dish.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <ul class="list-group">
                  <% @dish.favorites.each do |favorites| %>
                    <li class="list-group-item">
                      <%= favorites.user.username %> likes <%= favorites.dish.name %>
                    </li>
                  <% end %>
                  </ul>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
